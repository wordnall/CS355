<!DOCTYPE html>
<html>
<head>
    <title>Company - Edit</title>
</head>
<body>
<h1>Edit Company</h1>

<% if(locals.was_successful) { %>
<div class="col-md-12">
    <div id="message" class="alert alert-success col-md-4">
        <%= company.company_name %> was successfully saved.
    </div>
</div>
<% } %>

<form action="/company/update" method="get">
    <input type="hidden" id="company_id" name="company_id" value = "<%= company.company_id %>">

    Company Name: <input id="company_name" name="company_name" value ="<%= company.company_name%>">
    <br>
    Address
    <br>
    <% for(var i=0; address_result.length > i; i++ ) {
    var checked = "";

    if(address_result[i].company_id != null) {
        checked = "checked";
    }
    %>
    <input type="checkbox" name ="address_id" <%= checked %> value= "<%= address_result[i].address_id %>">
    <%= address_result[i].street + ', ' + address_result[i].zip_code %>
    <br>
    <% } %>
    <br>
    <input type="submit"> 
</form>
</body>
</html>