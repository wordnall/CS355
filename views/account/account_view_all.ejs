<!DOCTYPE html>
<html>
<head>
    <title>Account - View All</title>
</head>
    <body>
        <h1>Accounts</h1>
        <% if(locals.was_successful) { %>
        <div class="col-md-12">
            <div id="message" class="alert alert-success col-md-4">
                Account ID <%= account_id %> was successfully deleted.
                <br>
            </div>
        </div>
        <% }else { %>
        <div class="col-md-12">
            <div id="message" class="alert alert-danger col-md-4">
                Failed to delete account ID <%= account_id %>.
                <br>
                <br>
                <%#= error %>
                <br>
            </div>
        </div>
        <% } %>

        <a href="/account/add">Add New Account</a>
        <br>

        <table border="1">
            <th>ID</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>

            <% for(var i = 0; i < account.length; i++) { %>

            <tr>
                <td><%= account[i].account_id %></td>
                <td><%= account[i].email %></td>
                <td><%= account[i].first_name %></td>
                <td><%= account[i].last_name %></td>
                <td>
                    <a href="/account/edit/?account_id=<%= account[i].account_id %>">
                        Edit
                    </a>
                    <a href="/account/delete/?account_id=<%= account[i].account_id %>">
                        Delete
                    </a>
                </td>
            </tr>
            <% } %>
        </table>
    </body>
</html>