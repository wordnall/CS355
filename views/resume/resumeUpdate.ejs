<!DOCTYPE html>
<html>
<head>
    <title>Resume - Edit</title>
</head>
<body>
<h1>Resume - Edit</h1>

<% if(locals.was_successful) { %>
    <div class="col-md-12">
        <div id="message" class="alert alert-success col-md-4">
            <%= resumeInfo.resume_name %> was successfully saved.
        </div>
    </div>
<% } %>

<form action="/resume/update" method="get">
    <input type="hidden" id="resume_id" name="resume_id" value="<%= resume_id %>">

    Resume Name:
    <input name="resume_name">
    <br>
    <br>

    Skills
    <br>
    <%for (var i = 0; i < skills.length; i++) { %>
    <input type="checkbox" name="skill_id" value="<%= skills[i].skill_id %>">
    <%= skills[i].skill_name %>
    </input>

    <% } %>
    <br>
    <br>

    Schools
    <br>
    <%for (var i = 0; i < schools.length; i++) { %>
    <input type="checkbox" name="school_id" value="<%= schools[i].school_id %>">
    <%= schools[i].school_name %>
    </input>
    <% } %>
    <br>
    <br>

    Companies
    <br>
    <%for (var i = 0; i < companies.length; i++) { %>
    <input type="checkbox" name="company_id" value="<%= companies[i].company_id %>">
    <%= companies[i].company_name %>
    </input>
    <% } %>
    <br>
    <br>
    <input type="submit">
</form>
</body>
</html>